<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/primaryRunes"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/rune00"
                    android:layout_width="@dimen/runeSize"
                    android:layout_height="@dimen/runeSize"
                    android:padding="4dp"
                    tools:layout_editor_absoluteX="30dp"
                    tools:layout_editor_absoluteY="59dp"
                    tools:srcCompat="@tools:sample/avatars" />

                <ImageView
                    android:id="@+id/rune01"
                    android:layout_width="@dimen/runeSize"
                    android:layout_height="@dimen/runeSize"
                    android:layout_weight="0"
                    android:padding="4dp"
                    tools:layout_editor_absoluteX="30dp"
                    tools:layout_editor_absoluteY="59dp"
                    tools:srcCompat="@tools:sample/avatars" />

                <ImageView
                    android:id="@+id/rune02"
                    android:layout_width="@dimen/runeSize"
                    android:layout_height="@dimen/runeSize"
                    android:layout_weight="0"
                    android:padding="4dp"
                    tools:layout_editor_absoluteX="30dp"
                    tools:layout_editor_absoluteY="59dp"
                    tools:srcCompat="@tools:sample/avatars" />

                <ImageView
                    android:id="@+id/rune03"
                    android:layout_width="@dimen/runeSize"
                    android:layout_height="@dimen/runeSize"
                    android:layout_weight="0"
                    android:padding="4dp"
                    tools:layout_editor_absoluteX="30dp"
                    tools:layout_editor_absoluteY="59dp"
                    tools:srcCompat="@tools:sample/avatars" />

                <ImageView
                    android:id="@+id/rune04"
                    android:layout_width="@dimen/runeSize"
                    android:layout_height="@dimen/runeSize"
                    android:layout_weight="0"
                    android:padding="4dp"
                    tools:layout_editor_absoluteX="30dp"
                    tools:layout_editor_absoluteY="59dp"
                    tools:srcCompat="@tools:sample/avatars" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/rune05"
                    android:layout_width="@dimen/runeSize"
                    android:layout_height="@dimen/runeSize"
                    android:padding="4dp"
                    tools:layout_editor_absoluteX="30dp"
                    tools:layout_editor_absoluteY="59dp"
                    tools:srcCompat="@tools:sample/avatars" />

                <ImageView
                    android:id="@+id/rune06"
                    android:layout_width="@dimen/runeSize"
                    android:layout_height="@dimen/runeSize"
                    android:layout_weight="0"
                    android:padding="4dp"
                    tools:layout_editor_absoluteX="30dp"
                    tools:layout_editor_absoluteY="59dp"
                    tools:srcCompat="@tools:sample/avatars" />

                <ImageView
                    android:id="@+id/rune07"
                    android:layout_width="@dimen/runeSize"
                    android:layout_height="@dimen/runeSize"
                    android:layout_weight="0"
                    android:padding="4dp"
                    tools:layout_editor_absoluteX="30dp"
                    tools:layout_editor_absoluteY="59dp"
                    tools:srcCompat="@tools:sample/avatars" />

                <ImageView
                    android:id="@+id/rune08"
                    android:layout_width="@dimen/runeSize"
                    android:layout_height="@dimen/runeSize"
                    android:layout_weight="0"
                    android:padding="4dp"
                    tools:layout_editor_absoluteX="30dp"
                    tools:layout_editor_absoluteY="59dp"
                    tools:srcCompat="@tools:sample/avatars" />

            </LinearLayout>

        </LinearLayout>

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/secondaryRunes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
