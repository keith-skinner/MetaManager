<?xml version="1.0" encoding="utf-8"?>
<!-- -->
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorPrimaryDark"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="?android:attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar" />

    <Button
        android:id="@+id/customBtn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_weight="1"
        android:background="@drawable/anvil_black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/toolbar"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/ScrollView01"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:scrollbarSize="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="0dp">

        <RelativeLayout
            android:id="@+id/RelativeLayout01"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginRight="25dp"
                    android:background="@color/background"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/img"
                        android:layout_width="68dp"
                        android:layout_height="39dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/shadow_top" />

                    <Button
                        android:id="@+id/d01"
                        android:layout_width="match_parent"
                        android:layout_height="38dp"
                        android:layout_margin="1dp"
                        android:layout_weight="1"
                        android:text="TOP"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginRight="25dp"
                    android:background="@color/background"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/imageView10"
                        android:layout_width="71dp"
                        android:layout_height="39dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/shadow_middle" />

                    <Button
                        android:id="@+id/d02"
                        android:layout_width="match_parent"
                        android:layout_height="38dp"
                        android:layout_margin="1dp"
                        android:layout_weight="1"
                        android:text="MID"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginRight="25dp"
                    android:background="@color/background"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/imageView11"
                        android:layout_width="74dp"
                        android:layout_height="39dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/shadow_bottom" />

                    <Button
                        android:id="@+id/demojungle4"
                        android:layout_width="match_parent"
                        android:layout_height="38dp"
                        android:layout_margin="1dp"
                        android:layout_weight="1"
                        android:text="BOT"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginRight="25dp"
                    android:background="@color/background"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/imageView12"
                        android:layout_width="73dp"
                        android:layout_height="39dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/shadow_support" />

                    <Button
                        android:id="@+id/d"
                        android:layout_width="match_parent"
                        android:layout_height="38dp"
                        android:layout_margin="1dp"
                        android:layout_weight="1"
                        android:text="SUPPORT"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginRight="25dp"
                    android:background="@color/background"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="42dp"
                        android:layout_height="39dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/shadow_jungle" />

                    <Button
                        android:id="@+id/demojungle"
                        android:layout_width="108dp"
                        android:layout_height="38dp"
                        android:layout_margin="1dp"
                        android:layout_weight="1"
                        android:text="Jungle"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>