<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context="pocketspace.metamanager.screen_activities.ActivityAboutScreen">

        <LinearLayout
            android:id="@+id/about_linear_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/about_content_contact_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                />

            <View
                style="@style/HorizontalRule"
                android:layout_width="fill_parent"
                android:layout_height="2dip"
                />

            <include layout="@layout/about_content_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                />

            <View
                style="@style/HorizontalRule"
                android:layout_width="fill_parent"
                android:layout_height="2dip"/>

            <TextView
                android:id="@+id/about_open_source_title"
                style="@style/AboutPage.LargeText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/about_open_source_licenses_title"
                android:layout_marginVertical="8dp"
                />

        </LinearLayout>
    </ScrollView>