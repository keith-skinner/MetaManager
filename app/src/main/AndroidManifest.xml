<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="pocketspace.metamanager">

    <!-- TODO: Make the onclick actually work -->

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_INTERNAL_STORAGE" />

    <application
        android:icon="@mipmap/hat_ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/hat_ic_launcher_round"
        android:theme="@style/AppTheme"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning">

        <activity
            android:name=".screen_activities.HomeScreen"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity
            android:name=".screen_activities.GameListScreen"
            android:theme="@style/AppTheme" />

        <activity
            android:name=".screen_activities.CharacterListScreen"
            android:theme="@style/AppTheme" />

        <activity
            android:name=".screen_activities.RoleScreen"
            android:theme="@style/AppTheme" />

        <activity
            android:name=".screen_activities.BuildScreen"
            android:theme="@style/AppTheme" />

        <activity
            android:name=".screen_activities.AboutScreen"
            android:theme="@style/AppTheme" />

        <activity
            android:name=".screen_activities.ViewBuildsScreen"
            android:theme="@style/AppTheme" />

        <activity
            android:name=".screen_activities.ImportScreen"
            android:theme="@style/AppTheme" />

        <activity
            android:name=".screen_activities.CreateScreen"
            android:theme="@style/AppTheme"/>

    </application>

</manifest>