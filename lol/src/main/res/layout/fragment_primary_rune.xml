<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/primaryRuneTab"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentRune" >


    <include
        android:id="@+id/primaryRunes"
        layout="@layout/primary_runes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/keyStoneRunes"/>

    <include
        android:id="@+id/keyStoneRunes"
        layout="@layout/inspiration_primary_runes"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/primaryRunes"
        app:layout_constraintBottom_toTopOf="@id/secondaryRunes"/>

    <include
        android:id="@+id/secondaryRunes"
        layout="@layout/inspiration_secondary_runes"
        android:layout_width="250dp"
        android:layout_height="231dp"
        android:layout_margin="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/keyStoneRunes"
        app:layout_constraintVertical_bias="0.19" />

</android.support.constraint.ConstraintLayout>