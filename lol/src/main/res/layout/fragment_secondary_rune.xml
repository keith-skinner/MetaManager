<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/primaryRuneTab"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <include
        android:id="@+id/primaryRunes"
        layout="@layout/layout_primary_runes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/secondaryRunes"
        layout="@layout/layout_inspiration_secondary_runes"
        android:layout_width="217dp"
        android:layout_height="212dp"
        android:layout_margin="0dp"
        app:layout_constraintBottom_toTopOf="@+id/adaptiveRunes"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/primaryRunes" />

    <include
        android:id="@+id/adaptiveRunes"
        layout="@layout/layout_adaptive_runes"
        android:layout_width="180dp"
        android:layout_height="202dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/secondaryRunes" />

</android.support.constraint.ConstraintLayout>